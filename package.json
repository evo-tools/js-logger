{
  "name": "@evojs/logger",
  "version": "2.1.0",
  "description": "Nodejs logger",
  "license": "MIT",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc --build tsconfig.build.json && node tools/build.js",
    "prepublishOnly": "npm run build && npm run test && node tools/prepublish.js",
    "release": "RELEASE_MODE=1 npm run prepublishOnly && npm publish --access public dist/",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "eslint \"src/**/*.ts\" -f codeframe --fix"
  },
  "dependencies": {
    "source-map-support": "^0.5.20"
  },
  "devDependencies": {
    "@evojs/eslint-plugin": "^1.7.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/source-map-support": "^0.5.4",
    "eslint": "^7.32.0",
    "glob": "^7.2.0",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/dist/",
      "coverage/",
      "node_modules/"
    ],
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "@evojs"
    ],
    "extends": [
      "plugin:@evojs/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "env": {
          "node": true
        },
        "plugins": [
          "@evojs"
        ],
        "extends": [
          "plugin:@evojs/recommended-typescript"
        ],
        "parserOptions": {
          "project": "tsconfig.json",
          "sourceType": "module"
        }
      }
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.spec.json"
      }
    }
  },
  "author": {
    "name": "Shamil Sultanov",
    "email": "shamil.amirovich@gmail.com"
  },
  "keywords": [
    "nodejs",
    "evojs",
    "logger"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evotool/js-logger.git"
  },
  "bugs": {
    "url": "https://github.com/evotool/js-logger/issues"
  },
  "homepage": "https://github.com/evotool/js-logger#readme"
}
